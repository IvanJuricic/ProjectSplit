<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Administracija</title>
    <!--bower:css-->
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="/lib/slick-carousel/slick/slick-theme.css" />
    <link rel="stylesheet" href="/lib/slick-carousel/slick/slick.css" />
    <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="/lib/flag-icon-css/css/flag-icon.min.css" />
    <link rel="stylesheet" href="/lib/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.css" />
    <link rel="stylesheet" href="/lib/lightbox2/dist/css/lightbox.css" />
    <!--endbower-->
    <!--bower:js-->
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="/lib/angular/angular.min.js"></script>
    <script src="/lib/angular-slick-carousel/dist/angular-slick.js"></script>
    <script src="/lib/jquery-mousewheel/jquery.mousewheel.js"></script>
    <script src="/lib/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.js"></script>
    <!--endbower-->
    <!--inject:js-->
    <script src="/js/app-events.js"></script>
    <script src="/js/dataAdminController.js"></script>
    <!--endinject-->
</head>

<body ng-app="app-events" style="background-color:white;">
    <div ng-controller="adminController as vm">
        <h2>NEODOBRENI DOGAĐAJI</h2>
        <br>
        <div style="display:flex;flex-wrap:wrap;justify-content:space-around;">
            <div style="width:30%;max-height:500px;">
                <ul style="max-height:500px;overflow: auto">
                    <li ng ng-repeat="event in vm.unApprovedEvents">
                        <div>
                            <p>
                                Ime:{{event.NAME}}
                                <br> Datum:{{event.EVENTDATE}}
                                <br> Vrijeme:{{event.EVENTTIME}}
                                <br> Lokacija:{{event.LOCATION}}
                                <br> Kontakt osobe:{{event.PERSONCONTACT}}
                                <br> Opis Događaja:{{event.DESCRIPTION}}
                                <br> Vanjska poveznica:{{event.MOREURL}}
                                <br><a href="" ng-click="vm.selectEvent(event)">Show!</a><a href="" ng-click="vm.unApprovedEventRemove(event)">Remove!</a>
                            </p>
                        </div>
                    </li>
                </ul>
            </div>
            <div style="width:60%;height:500px;">
                <div>
                    <h4>ODABRANI EVENT</h4>
                    <p>
                        Ime:{{vm.selectedEvent.NAME}}
                        <br> Datum:{{vm.selectedEvent.EVENTDATE}}
                        <br> Vrijeme:{{vm.selectedEvent.EVENTTIME}}
                        <br> Lokacija:{{vm.selectedEvent.LOCATION}}
                        <br> Kontakt osobe:{{vm.selectedEvent.PERSONCONTACT}}
                        <br> Opis Događaja:{{vm.selectedEvent.DESCRIPTION}}
                        <br> Vanjska poveznica:{{vm.selectedEvent.MOREURL}}
                    </p>
                </div>
                <h4>ODOBRI EVENT!</h4>
                <input name="approveEventName" ng-model="vm.approveEventName" type="text" placeholder="ime" maxlength="" minlength="">
                <input name="approveEventLocation" ng-model="vm.approveEventLocation" type="text" placeholder="lokacija" maxlength="" minlength="">
                <input name="approveEventType" ng-model="vm.approveEventType" type="text" placeholder="eventType" maxlength=""
                    minlength="">
                <input name="approveEventMoreUrl" ng-model="vm.approveEventMoreUrl" type="text" placeholder="moreUrl" maxlength="" minlength="">
                <input name="approveEventDate" ng-model="vm.approveEventDate" type="text" placeholder="eventDate" maxlength="" minlength="">
                <input name="approveEventTime" ng-model="vm.approveEventTime" type="text" placeholder="eventTime" maxlength="" minlength="">
                <input name="approveEventImgUrl" ng-model="vm.approveEventImgUrl" type="text" placeholder="imgUrl" maxlength="" minlength="">
                <textarea name="approveEventDescription" ng-model="vm.approveEventDescription" placeholder="description" maxlength="256"
                    minlength="1"></textarea>    
                <hr>
                <a href="" ng-click="vm.ApproveEvent()">DODAJ U BAZU!</a>
            </div>
        </div>
        <h2>ODOBRENI DOGAĐAJI</h2>
        <br>
        <div>
            <div style="width:100%;max-height:500px;padding: 25px">
                <div style="max-height:300px;overflow: auto;display:flex;flex-wrap:wrap;justify-content:space-around;">
                    <div style="max-width: 300px" ng ng-repeat="event in vm.ApprovedEvents">
                        <p>
                            Ime:{{event.NAME}}
                            <br> Datum:{{event.EVENTDATE}}
                            <br> Vrijeme:{{event.EVENTTIME}}
                            <br> Lokacija:{{event.LOCATION}}
                            <br> Kontakt osobe:{{event.PERSONCONTACT}}
                            <br> Opis Događaja:{{event.DESCRIPTION}}
                            <br><a href="" ng-click="vm.ApprovedEventRemove(event)">Remove!</a>
                        </p>
                    </div>
                </div>
            </div>
            <div>
            </div>

</body>

</html>